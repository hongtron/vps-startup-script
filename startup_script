apt-get update && apt-get install -y git wget mosh

# Install docker
curl -fsSL get.docker.com -o get-docker.sh && sh get-docker.sh

# Install docker-compose
curl -L https://github.com/docker/compose/releases/download/1.17.0/docker-compose-`uname -s`-`uname -m` -o /usr/local/bin/docker-compose
chmod +x /usr/local/bin/docker-compose

# set up docker devenv
git clone https://github.com/hongtron/dotfiles.git
cp /root/dotfiles/bin/devenv /usr/local/bin
cp /root/dotfiles/docker-compose.yml /usr/local/etc/docker-compose.yml

cat << ALIASES >> /root/.bashrc
alias g='git'
ALIASES

# Add github to known hosts
cat << KNOWNHOSTS >> /root/.ssh/known_hosts
|1|/etcFyyFnQA1kQ9z7mk0+7uHpNo=|Dw2HmMgVZN7mivluBA3YHrdOB1w= ssh-rsa 
|1|Jla1ha2QzPlgGBUhyu072R/9H/U=|29YVTmgwsiofGLobWQUh7ASc1+M= ssh-rsa 
KNOWNHOSTS

# Add swap
dd if=/dev/zero of=/swapfile count=2048 bs=1M
chmod 600 /swapfile
mkswap /swapfile
swapon /swapfile
echo "/swapfile   none    swap    sw    0   0" >> /etc/fstab
